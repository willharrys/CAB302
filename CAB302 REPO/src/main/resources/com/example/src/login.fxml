<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.src.LoginController">

    <top>
        <HBox alignment="TOP_LEFT" spacing="10" style="-fx-padding: 10;">
            <!-- Return Button -->
            <Button fx:id="registerClick" text="Return" onAction="#OnReturnClick"
                    style="-fx-background-color: #c4d6b0; -fx-text-fill: #767f66; -fx-font-size: 16px; -fx-background-radius: 5;"
                    maxWidth="Infinity" prefHeight="20"
            />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f2f2f2; -fx-padding: 30;">
            <!-- Text Field for Username -->
            <TextField fx:id="usernameField" promptText="Username"
                       maxWidth="300" prefHeight="40"
                       style="-fx-font-size: 16px; -fx-padding: 4; -fx-background-radius: 5; -fx-background-color: #ffffff;"/>
            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password"
                           maxWidth="300" prefHeight="40"
                           style="-fx-font-size: 16px; -fx-padding: 4; -fx-background-radius: 5; -fx-background-color: #ffffff;"/>

            <!-- Message Label -->
            <Label fx:id="messageLabel"
                   style="-fx-text-fill: #d32f2f; -fx-font-size: 14px;"/>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                    maxWidth="350" prefHeight="50"
                    style="-fx-background-color: #c4d6b0; -fx-text-fill: #767f66; -fx-font-size: 16px; -fx-background-radius: 5;"/>
        </VBox>
    </center>
</BorderPane>
