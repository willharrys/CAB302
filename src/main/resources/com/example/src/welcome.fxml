<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.src.HomePageApplication" style="-fx-background-color: #d6d6b0;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to Our Application" style="-fx-font-size: 24; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Login" style="-fx-font-size: 18;">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameField" promptText="Username" prefWidth="200"/>
        <PasswordField fx:id="passwordField" promptText="Password" prefWidth="200"/>
        <Button fx:id="loginButton" text="Login"/>
    </VBox>

    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Register" style="-fx-font-size: 18;">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="registerUsernameField" promptText="Username" prefWidth="200"/>
        <PasswordField fx:id="registerPasswordField" promptText="Password" prefWidth="200"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" prefWidth="200"/>
        <Button fx:id="registerButton" text="Register"/>
    </VBox>

    <Label fx:id="messageLabel" style="-fx-font-size: 14;">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

</VBox>
